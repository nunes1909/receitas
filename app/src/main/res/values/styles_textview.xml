<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewLogin">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">14sp</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="TextViewCategorias">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/categorias</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewTitleCategorias">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/categorias</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewTitleDetalhes">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewDescriptionDetalhes">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TextViewIngredientes">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/drawable_textview_ingrediente</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
</resources>